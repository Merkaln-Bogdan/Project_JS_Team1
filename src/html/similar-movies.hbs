<h2 class="similarTitle">Similar movies</h2>
<div class="similarMovies" data-slick='{"slidesToShow": 4, "slidesToScroll": 4}'>
    {{#each this}}

    <div class="slider-item">
        <a href="#id={{id}}" onclick="location.replace('#id={{id}}'); location.reload();">
        {{#if backdrop_path}} <img src="https://image.tmdb.org/t/p/w500{{backdrop_path}}"> {{else}} <img src="src/images/no_image.jpg"> {{/if}}            
        <h2>{{title}}</h2>
        </a>
    </div>

    {{/each}}

</div>